#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int tranfer2nums(int l1[],int l2[],int len1,int len2)
{
    int* num=(int*)malloc(2*sizeof(int));
    int num1,num2;
    for(int i=len1;i>0;i--){num1+=l1[i]*power(10,i);}
    for(int i=len2;i>0;i--){num1+=l2[i]*power(10,i);}
    return num;
}
int count(int n)
{
    int i=0;
    while (n>0){n/=10;  i++;}
    return i;
}
int* add2nums(int l1[],int l2[],int len1,int len2)
{
    int size;
    int num[1]= tranfer2nums(l1,l2,len1,len2);
    int sum=num[0]+num[1];
    int n=count(num);
    int* result=(int*)malloc(n*sizeof(int));
    while(n>0){result[n]=sum%10;    sum/=10;    n--;}
    return result;
}

int main()
{
    int l1[100],l2[100];
    int len1,len2;
    printf("Nhap so len1:");
    scanf("%d",&len1);
    for (int i=0;i<len1;i++) scanf("%d",&l1[i]);
    printf("Nhap so len2:");
    scanf("%d",&len2);
    for (int i=0;i<len1;i++) scanf("%d",&l1[i]);
    int* result[100]=add2nums(l1,l2,len1,len2);
    for (int i=0;i<len1;i++) printf("%d ",result[i]);

}